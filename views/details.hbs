<section id="details-info">
    <h1>Details</h1>
    <div class="volcano-image">
        <img src="{{volcanoe.image}}">
    </div>

    <div class="volcano-info">
        <div class="volcano-text">
            <h1 id="name">{{volcanoe.name}}</h1>
            <h3 id="location">Location: {{volcanoe.location}}</h3>
            <p id="type">Volcano Type: {{volcanoe.typeVolcano}}</p>
            <p id="elevation"><span>Elevation: {{volcanoe.elevation}}m</span></p>
            <p id="last-eruption">Year of Last Eruption: {{volcanoe.lastEruption}}</p>
            <p id="votes">Vote's Count: {{numberVotes}}</p>
            <p id="description">{{volcanoe.description}}</p>
        </div>
        {{#if hasUser}}
        <div class="product-btn">
            <!-- Only for registered user and author of the publication -->
            {{#if isOwner}}
            <div class="author">
                <a href="/edit/{{volcanoe._id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{volcanoe._id}}" class="btn-delete">Delete</a>
            </div>
            {{else}}
            {{#if hasVoted}}
            <p class="vote-message">You've already voted for this volcano!</p>
            {{else}}
            <!-- Logged in user who has not yet voted for this volcano -->
            <a href="/vote/{{volcanoe._id}}" class="btn-vote">Vote</a>
            {{/if}}
            {{/if}}
        </div>
        {{/if}}
    </div>
</section>